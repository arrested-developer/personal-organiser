{
  "name": "personal-organiser",
  "version": "1.0.0",
  "description": "A to-do list made with React and Materialize",
  "main": "./server/app.js",
  "scripts": {
    "test": "cd client && npm test && cd ../server && npm test",
    "test-coverage": "cd client && npm run test-coverage && cd ../server && npm run test-coverage",
    "report-coverage": "codecov",
    "init-client": "cd client && npm i",
    "init-server": "cd server && npm i",
    "init": "concurrently \"npm:init-*\"",
    "dev-client": "cd client && npm start",
    "dev-server": "cd server && npm run dev",
    "dev": "concurrently \"npm:dev-*\" -kill-others",
    "build-client": "cd client && npm run build",
    "heroku-postbuild": "npm run init && npm run build-client",
    "start": "cd server && npm start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arrested-developer/personal-organiser.git"
  },
  "author": "@arrested-developer",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/arrested-developer/personal-organiser/issues"
  },
  "homepage": "https://github.com/arrested-developer/personal-organiser#readme",
  "devDependencies": {
    "codecov": "^3.1.0",
    "concurrently": "^4.1.0"
  }
}
